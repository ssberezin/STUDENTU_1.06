<Window x:Class="STUDENTU_1._06.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      
         xmlns:helpes="clr-namespace:STUDENTU_1._06.Helpes" 
        xmlns:scm1="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        mc:Ignorable="d"
         WindowStartupLocation="CenterScreen"
        Title="Авторизация" MaxHeight="150" MaxWidth="300" MinHeight="150" MinWidth="300" Height="150" Width="300"
        Background="LightGray">
    <Window.InputBindings>
        <KeyBinding Gesture="Esc" Command="{Binding CloseWindowCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type Window}}}"/>
        <!-- Command CloseWindowCommand can find in ForEditOrder.cs!-->
    </Window.InputBindings>

    <Window.Resources>

        <ResourceDictionary>




        </ResourceDictionary>



    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width=".05*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="0.45*"/>
            <RowDefinition Height="0.75*"/>
        </Grid.RowDefinitions>
        <Viewbox Grid.Row="1"  MaxHeight="15"  Stretch="Uniform" Margin="5" HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch" >
            <TextBlock  Text="Пользователь:" FontWeight="Bold"/>
        </Viewbox>
        <TextBox x:Name="Login" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Margin="5" 
                 Background="White" 
                 Text="{Binding  User.UserNickName , Mode=TwoWay,
            UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"
                 SpellCheck.IsEnabled="True" Language="ru-ru" TextAlignment="Center"
                 TabIndex="0"/>
        <Viewbox Grid.Row="2"  MaxHeight="15"  Stretch="Uniform" Margin="5" HorizontalAlignment="Center" 
                     VerticalAlignment="Stretch" >
            <TextBlock  Text="Пароль:" FontWeight="Bold" />
        </Viewbox>
        <TextBox x:Name="Password" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" Margin="5" 
                 Background="White" 
                 Text="{Binding  User.Pass , Mode=TwoWay,
            UpdateSourceTrigger=PropertyChanged}" TextWrapping="Wrap"
                 SpellCheck.IsEnabled="True" Language="ru-ru" TextAlignment="Center"
                 TabIndex="1"/>

        <Viewbox MaxHeight="18"  Stretch="Uniform" Margin="2" HorizontalAlignment="Right" Grid.Row="3"
                 Grid.ColumnSpan="3"
                     VerticalAlignment="Bottom" >
            <TextBlock Text="Не зарегистрированны?" FontWeight="Bold" Cursor="Hand"
                           Foreground="Blue">
                <TextBlock.InputBindings>
                    <MouseBinding Command="{Binding UserOperations}" MouseAction="LeftClick"/>
                </TextBlock.InputBindings>                
            </TextBlock>
                       
        </Viewbox>
        <Button  Grid.Row="4"  Content="Ok" Background="Green"                 
                TabIndex="2"
                   Command="{Binding AuthorisationTry.checkPersoneCommand}"
                 CommandParameter="{Binding DataContext, RelativeSource=
                    {RelativeSource AncestorType={x:Type Window}}}">          
        </Button>
        <Button  Grid.Row="4" Grid.Column="2"  Content="Отмена" Background="Red"                
                TabIndex="3"
                 Command="{Binding AuthorisationTry.CancelAuthorezitionCommand}"
                CommandParameter="{Binding DataContext, RelativeSource=
                    {RelativeSource AncestorType={x:Type Window}}}">
        </Button>
    </Grid>
</Window>